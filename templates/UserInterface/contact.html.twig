{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h3 class="center-align">Me contacter</h3>

        <form method="post" action="{{ path('contact_form') }}">
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="lastname">Nom</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" required>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="firstname">Pr√©nom</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" required>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="email">Mail</label>
                    <input type="text" class="form-control" id="email" name="email" required>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="title">Titre</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="message">Votre message</label><br>
                    <input class="form-control materialize-textarea" id="message" name="message" required>
                </div>
            </div>

            <div class="row">
                <div class="col s2 offset-s8">
                    <button type="submit" class="light-green darken-1 waves-effect waves-light btn">Envoyer</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
