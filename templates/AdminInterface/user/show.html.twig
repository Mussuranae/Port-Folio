{% extends 'baseAdmin.html.twig' %}

{% block title %}PF User{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.zipCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Présentation</th>
                <td>{{ user.introduction }}</td>
            </tr>
            <tr>
                <th>Centres d'intérêt</th>
                <td>{{ user.interest }}</td>
            </tr>
            <tr>
                <th>Profil GitHub</th>
                <td>{{ user.gitHubLink }}</td>
            </tr>
            <tr>
                <th>Profil Linkedin</th>
                <td>{{ user.linkedinLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="waves-effect waves-light btn-small">Retour</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="waves-effect waves-light btn-small">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
