{% extends 'baseAdmin.html.twig' %}

{% block title %}PF User{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>PhoneNumber</th>
                <th>GitHubLink</th>
                <th>LinkedinLink</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.gitHubLink }}</td>
                <td>{{ user.linkedinLink }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="waves-effect waves-light btn-small">Voir</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="waves-effect waves-light btn-small">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Aucun Utilisateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Nouveau</a>
{% endblock %}
