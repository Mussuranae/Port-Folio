{% extends 'baseAdmin.html.twig' %}

{% block title %}PF Experience{% endblock %}

{% block body %}
    <h1>Expériences professionnelles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entreprise</th>
                <th>Poste</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.post }}</td>
                <td>{{ experience.beginDate ? experience.beginDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}" class="waves-effect waves-light btn-small">Voir</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}" class="waves-effect waves-light btn-small">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune expérience enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}" class="waves-effect waves-light btn-small">Nouveau</a>
{% endblock %}
