{% extends 'baseAdmin.html.twig' %}

{% block title %}PF Experience{% endblock %}

{% block body %}
    <h1>Expériences professionnelles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ experience.company }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ experience.post }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ experience.description }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ experience.beginDate ? experience.beginDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('experience_index') }}" class="waves-effect waves-light btn-small blue lighten-2">Retour</a>

    <a href="{{ path('experience_edit', {'id': experience.id}) }}" class="waves-effect waves-light btn-small blue lighten-2">Modifier</a>

    {{ include('AdminInterface/experience/_delete_form.html.twig') }}
{% endblock %}
